<div class = "profile">
  <div class = "header">
  </div>
  <div class = "user_page">
    <div class = "user_box">
      <div class = "user_title">
        <h1>マイページ</h1>
      </div>
      <div class = "user_contents">
        <div class = "user_profile">
          <p>名前 : <%= @user.name %></p>
          <p>プロフィール : <%= @user.profile %></p>
          <p>Twitter : <%= @user.twitter_id %></p>
          <p>Instagram : <%= @user.instagram_id %></p>

          <% if current_user.id == @user.id %>
            <%= button_to "編集する", edit_user_registration_path, method: :get, class: "edit" %></br>
          <% end %>
        </div>
        <div class = "user_image">
        </div>
      </div>
      <div class = "button_area">
        <%= button_to "勉強時間を記録しに行く", new_study_record_path,  method: :get, class: "button" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "button"%>
      </div>
    </div>
  </div>
  <div class = "footer">
  </div>
</div>